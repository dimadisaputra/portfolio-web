---
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects", ({ data }) => {
  return data.draft !== true;
});
---

<section
  id="tech"
  class="mt-48 sm:mt-64 w-full max-w-5xl mx-auto text-center px-6"
>
  <div class="relative mb-12">
    <div
      class="absolute -top-12 left-1/2 -translate-x-1/2 text-8xl opacity-25 pointer-events-none"
    >
      ðŸ¤–
    </div>

    <h2 class="text-4xl sm:text-5xl font-bold text-black-alt relative">
      Tech I Work With
    </h2>
  </div>

  {
    (() => {
      const allTags = allProjects.flatMap((project) => project.data.tags || []);

      const uniqueTags = Array.from(new Set(allTags));

      return (
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          {uniqueTags.map((tag, index) => (
            <div
              class="group relative overflow-hidden rounded-2xl hover:scale-105 transition-transform duration-300 cursor-default will-change-transform h-full"
              style={`animation: fadeInUp 0.5s ease-out ${index * 0.05}s both;`}
            >
              {/* Glass Card - optimized */}

              <div class="relative bg-white/80 rounded-2xl px-4 py-6 border border-gray-200/50 shadow-md hover:shadow-xl hover:border-blue-crayola/30 transition-all duration-300 h-full flex items-center justify-center">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-crayola/0 to-purple-500/0 group-hover:from-blue-crayola/5 group-hover:to-purple-500/5 transition-all duration-300 rounded-2xl" />

                <p class="relative z-10 text-center text-sm text-gray-700 group-hover:text-blue-crayola transition-colors duration-300">
                  {tag}
                </p>
              </div>
            </div>
          ))}
        </div>
      );
    })()
  }
</section>
