---
// src/pages/404.astro
import ErrorLayout from "../layouts/ErrorLayout.astro";

const title = "404 - Page Not Found | Dimas Adi Saputra";
const description =
  "Oops! The page you're looking for doesn't exist. Let's get you back on track.";
---

<ErrorLayout title={title} description={description}>
  <main class="mt-24 sm:mt-32 animate-fade-in-up">
    <div
      id="hero"
      class="flex flex-col items-center justify-center gap-8 w-full max-w-4xl mx-auto text-center px-6"
    >
      <div class="relative">
        <div
          class="text-9xl sm:text-[12rem] font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-poppy/30 to-blue-crayola/30 mb-4 select-none animate-pulse-slow"
        >
          404
        </div>
        <div
          class="absolute inset-0 text-9xl sm:text-[12rem] font-extrabold text-poppy/10 blur-2xl -z-10"
        >
          404
        </div>
      </div>

      <h1
        class="text-4xl sm:text-5xl lg:text-6xl text-black-alt font-extrabold leading-tight"
      >
        Oops! <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-poppy to-red-600"
          >Page Not Found</span
        >
        <span class="inline-block animate-bounce-slow">ðŸ˜…</span>
      </h1>

      <a
        href="/"
        class="group inline-flex items-center text-gray-700 hover:text-poppy transition-all duration-300 font-semibold px-6 py-3 rounded-xl border border-gray-200 hover:border-poppy/30 hover:shadow-lg hover:shadow-poppy/10 hover:-translate-y-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2 group-hover:-translate-x-1 transition-transform duration-300"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Home</span>
      </a>
    </div>
  </main>
</ErrorLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  @keyframes bounce-slow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
  }

  .animate-pulse-slow {
    animation: pulseSlow 3s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }
</style>
