---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Image, getImage } from "astro:assets";
import ProjectPreview from "../../components/ProjectPreview.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects", ({ data }) => {
    return data.draft !== true;
  });
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const {
  title,
  description,
  pubDate,
  tags = [],
  image,
  imageAlt,
  author,
} = project.data;

const { Content } = await project.render();

// --- SEO & Structured Data ---
const coverImageForSeo = await getImage({
  src: image,
  width: 1200,
  height: 630,
  format: "jpeg",
});
const absoluteImageUrl = new URL(coverImageForSeo.src, Astro.site).href;

const seoTitle = `${title} | Portfolio Proyek ${author || "Dimas"}`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: title,
  description: description,
  datePublished: pubDate?.toISOString(),
  author: {
    "@type": "Person",
    name: author || "Dimas Adi Saputra",
  },
  image: absoluteImageUrl,
  keywords: tags?.join(", "),
};

const formattedDate = pubDate
  ? pubDate.toLocaleDateString("en-UK", {
      year: "numeric",
      month: "short",
    })
  : "";
---

<Layout title={seoTitle} description={description} canonical={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Animated Background -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-blue-crayola/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-poppy/5 rounded-full blur-3xl"
    >
    </div>
  </div>

  <article
    class="mt-24 sm:mt-32 w-full max-w-5xl mx-auto px-6 animate-fade-in-up"
  >
    <!-- Back Button -->
    <div class="mb-8">
      <a
        href="/projects"
        class="group inline-flex items-center text-gray-600 hover:text-poppy transition-all duration-300 font-medium"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2 group-hover:-translate-x-1 transition-transform duration-300"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Back to projects</span>
      </a>
    </div>

    <!-- Header -->
    <header class="mb-12">
      <!-- Date Badge -->
      {
        pubDate && (
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-blue-crayola/10 to-poppy/10 border border-blue-crayola/20 backdrop-blur-sm mb-6">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 text-gray-600"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                clip-rule="evenodd"
              />
            </svg>
            <time
              datetime={pubDate.toISOString()}
              class="text-sm font-medium text-gray-700"
            >
              {formattedDate}
            </time>
          </div>
        )
      }

      <!-- Title -->
      <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-black-alt mb-6 leading-tight"
      >
        {title}
      </h1>

      <!-- Description -->
      <p class="text-lg sm:text-xl text-gray-600 mb-8 leading-relaxed">
        {description}
      </p>

      <!-- Tags -->
      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-3">
            {tags.map((tag) => (
              <span class="group relative overflow-hidden rounded-xl hover:scale-105 transition-transform duration-300 cursor-default will-change-transform">
                <div class="relative bg-white/80 rounded-xl px-4 py-2 border border-gray-200/50 shadow-sm hover:shadow-md hover:border-blue-crayola/30 transition-all duration-300">
                  <div class="absolute inset-0 bg-gradient-to-br from-blue-crayola/0 to-purple-500/0 group-hover:from-blue-crayola/5 group-hover:to-purple-500/5 transition-all duration-300 rounded-xl" />
                  <span class="relative z-10 text-sm font-semibold text-gray-700 group-hover:text-blue-crayola transition-colors duration-300">
                    {tag}
                  </span>
                </div>
              </span>
            ))}
          </div>
        )
      }
    </header>

    <!-- Featured Image -->
    <div
      class="mb-16 group relative overflow-hidden rounded-3xl shadow-2xl animate-fade-in animation-delay-200"
    >
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 pointer-events-none"
      >
      </div>
      <Image
        src={image}
        alt={imageAlt}
        class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
        loading="eager"
        widths={[400, 800, 1200]}
        sizes="(max-width: 800px) 100vw, 1200px"
      />
    </div>

    <!-- Content -->
    <div class="prose prose-lg max-w-none animate-fade-in animation-delay-400">
      <Content />
    </div>
  </article>

  <!-- Footer Navigation -->
  <div class="max-w-5xl mx-auto px-6 py-16 mt-16 border-t border-gray-200">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
      <a
        href="/projects"
        class="group inline-flex items-center text-gray-700 hover:text-poppy transition-all duration-300 font-semibold px-6 py-3 rounded-xl border border-gray-200 hover:border-poppy/30 hover:shadow-lg hover:shadow-poppy/10 hover:-translate-y-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2 group-hover:-translate-x-1 transition-transform duration-300"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span>View all projects</span>
      </a>

      <a
        href="/#projects"
        class="group inline-flex items-center text-white bg-gradient-to-r from-blue-crayola to-blue-600 hover:shadow-xl hover:shadow-blue-crayola/30 transition-all duration-300 font-semibold px-6 py-3 rounded-xl hover:-translate-y-1"
      >
        <span>Back to home</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 ml-2"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
          ></path>
        </svg>
      </a>
    </div>
  </div>
  <ProjectPreview />
</Layout>

<style>
  @reference "../../styles/global.css";

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    animation-fill-mode: both;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
    animation-fill-mode: both;
  }

  /* Enhance prose styling */
  .prose {
    @apply text-gray-700;
  }

  .prose h2 {
    @apply text-3xl font-bold text-black-alt mt-12 mb-6;
  }

  .prose h3 {
    @apply text-2xl font-bold text-black-alt mt-8 mb-4;
  }

  .prose p {
    @apply text-lg leading-relaxed mb-6;
  }

  .prose a {
    @apply text-blue-crayola hover:text-poppy font-medium underline decoration-blue-crayola/30 hover:decoration-poppy/50 transition-colors duration-300;
  }

  .prose ul,
  .prose ol {
    @apply my-6 space-y-2;
  }

  .prose li {
    @apply text-lg;
  }

  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono text-poppy;
  }

  .prose pre {
    @apply bg-gray-900 text-gray-100 p-6 rounded-2xl overflow-x-auto my-8 shadow-lg;
  }

  .prose pre code {
    @apply bg-transparent p-0 text-gray-100;
  }

  .prose blockquote {
    @apply border-l-4 border-blue-crayola pl-6 italic text-gray-600 my-8;
  }

  .prose img {
    @apply rounded-2xl shadow-lg my-8;
  }

  .prose strong {
    @apply font-bold text-black-alt;
  }

  .prose em {
    @apply italic text-gray-600;
  }
</style>
