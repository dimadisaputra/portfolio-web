---
// src/layouts/Layout.astro
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import background from "../assets/background.svg";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = "Dimas - Portfolio",
  description = "Data enthusiast portfolio",
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body class="font-display text-black-alt bg-black-alt m-0">
    <div
      id="container"
      class="fixed inset-0 m-2 sm:m-4 rounded-2xl overflow-hidden bg-ghost-white"
    >
      <!-- Background blur -->
      <div
        class="absolute inset-0 z-0"
        style={`background: url(${background.src}) center/cover no-repeat; filter: blur(100px);`}
      >
      </div>

      <!-- Main content -->
      <div
        class="relative z-10 flex flex-col h-full overflow-y-auto no-scrollbar"
      >
        <NavBar />
        <main class="flex-1">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* Hide scrollbar */
  .no-scrollbar {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE & Edge */
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }
</style>
